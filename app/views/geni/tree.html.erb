
<center>
<table>
  <tr><td style="padding:0px">
	<table >	
	  <tr>
	    <td>
	      &nbsp;
	    </td>
	  </tr> 
	  <tr>
	    <td align=right style="padding:0px">
		  <%= sex_symbol( @individual.sex ) %> 
		  <%= link_to( prettify_name(@individual.name), 
		               individual_by_uid_path( @individual.uid ) ) if @individual %>  	  
	      <%= "<br> &#9774;".html_safe if @individual.birth %>
	           <%= @individual.birth.date if @individual.birth %> 
	           <%= @individual.birth.location if @individual.birth %>
	      <%= "<br> &#10013;".html_safe if @individual.death %>
	           <%= @individual.death.date if @individual.death %> 
	           <%= @individual.death.location if @individual.death %>
	    </td>  
	  </tr>
	  <tr>
	    <td align=right>
	
	       <table style="border-style: solid; border-color: grey; border-width: 0px 3px 0px 0px;">
	          <% @individual.unions.each do |union| %>
	           <tr>
	             <td style="width:50px">               
	             </td>
	             <td colspan=2>  
		            <%= marriage_symbol %>              
		            <%= link_to( prettify_name(union.spouse(@individual.uid).name), 
		               tree_path( union.spouse(@individual.uid).uid ) ) if union.spouse(@individual.uid) %>
		            <%= '<br>'.html_safe if union.marriage %> 
		            <%= union.marriage.date if union.marriage %>                    
	             </td>             
	           </tr>
	           <% union.children.each do |child| %>
	             <tr>
	               <td colspan=2>      
	                 <%= sex_symbol( child.sex ) %>  
		             <%= link_to( prettify_name(child.name), 
		                    tree_path( child.uid ) ) %>                        
	               </td>           
	             <% end %>
	         <% end %>
	       </table>
	  
	    </td> 
	  </tr>
	</table> 
  </td><td valign=top style="padding:0px">	
    <% if @individual.father or @individual.mother %>
	<table style="border-style: solid; border-color: grey; border-width: 0px 0px 0px 3px">
	  <tr>
	    <td align=left style="padding: 0px">
		  <%= sex_symbol( @individual.father.sex ) if @individual.father %> 
		  <%= link_to( prettify_name(@individual.father.name), 
		               tree_path( @individual.father.uid ) ) if @individual.father %>        
	    </td>
	  </tr>
	  <tr>
	    <td>
	      &nbsp;
	    </td>
	  </tr>   
	  <tr> 
	    <td align=left valign=top  style="padding: 0px">
	      <%= sex_symbol( @individual.mother.sex ) if @individual.mother %> 
		  <%= link_to( prettify_name(@individual.mother.name), 
		               tree_path( @individual.mother.uid ) ) if @individual.mother %>        
	    </td>   
	  </tr>
	</table>
	<% end %>
  </td></tr>
</table>
</center>
