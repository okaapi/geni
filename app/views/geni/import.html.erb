
 
<div class="panel panel-danger">
  <div class="panel-heading">
    <b>Upload .ged file</b>
  </div>
  <div class="panel-body">
    <%= form_tag file_upload_path, multipart: true do %>
      <div class="row">	                                      
        <div class="col-xs-2">
          <%= label_tag :tree,"Tree name" %>
          <%= text_field_tag :tree, @default_tree,
                      class: "form-control input-sm" %>
        </div>	        	
        <div class="col-xs-2">
          <%= label_tag :file,".ged file" %>
	      <%= file_field_tag :file, class: 'btn  btn-default' %>
	    </div>
	  </div>
	
	  <h3> This will take time! </h3> 
	
      <div class="row">	  
        <div class="col-xs-2">	
	      <div class="actions">
	        <%= submit_tag 'Upload!', class: 'btn btn-default',
	            onclick: "$('#upload_indicator').show(); ".html_safe  %>
	      </div>
	    </div>
	  </div>
	<% end %> 
	              	    

	
	<%= image_tag("spinner.gif", :id => 'upload_indicator', :style => 'display:none') %>	     
  </div>
</div>                            
	                              
 



<%= render partial: "footer" %>