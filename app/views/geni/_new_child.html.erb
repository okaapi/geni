
<div class="panel panel-danger">
  <div class="panel-heading">
    <b>Create new 
    (<%= link_to 'existing', add_child_path( individual.uid, union.uid ), class: 'editlink', remote: true %>)
    person as child of </b><%= individual.pretty_name(is_user?) %> <b>and </b>
        <%= ( union.spouse( individual.uid ) ? 
		        union.spouse( individual.uid ).pretty_name(is_user?) : '?' ) %>
  </div>
  <div class="panel-body">
    <%= form_tag create_new_child_path do %>
  
	  <div class="row">
        <div class="col-xs-4">
          <%= label_tag :given,"Given" %>
          <%= text_field_tag :given, '',
                             class: "form-control input-sm", autofocus: true %>
        </div>
        <div class="col-xs-6">
          <%= label_tag :surname, "Surname" %>
          <%= text_field_tag :surname, individual.surname ,
                             class: "form-control input-sm" %>
        </div>
        <div class="col-xs-2">
          <%= label_tag :sex,"M/F" %>
          <%= text_field_tag :sex, @gender, class: "form-control input-sm" %>
        </div>			
      </div>
	  <div class="row">
        <div class="col-xs-2">
          <%= label_tag :prefix,"Prefix" %>
          <%= text_field_tag :prefix, '', class: "form-control input-sm" %>
        </div>
        <div class="col-xs-2">
          <%= label_tag :prefix,"Nickname" %>
          <%= text_field_tag :nickname, '', class: "form-control input-sm" %>
        </div>
        <div class="col-xs-2">
          <%= label_tag :prefix,"Suffix" %>
          <%= text_field_tag :suffix, '', class: "form-control input-sm" %>
        </div>
        <div class="col-xs-2">
          <%= label_tag :pedigree,"Pedigree" %>
          <%= text_field_tag :pedigree, '', class: "form-control input-sm" %>
        </div>			
      </div>
	  <br>
      <%= render partial: "event_edit", 
		         locals: { eventname: "Birth", event: Event.new, autofocus: false } %>
	  <br>
	  <div class="actions">
	    <%= submit_tag 'create', class: "btn btn-default" %>
	    <%= link_to 'cancel', tree_path( individual.uid ) %>
	  </div>        		
    <% end %>	 
  </div>  	
</div>
