<div class="panel panel-danger">
  <div class="panel-heading">
    <b>Add existing 
    (<%= link_to 'new', new_spouse_path( individual.uid, union.uid ), 
				        class: 'editlink', remote: true %>) 
    person as spouse for</b> <%= individual.pretty_name(is_user?) %>
    <b> married on </b>
		 <%= (union.marriage and union.marriage.date) ? union.marriage.date : "date n/a"  %>    
  </div>
  <div class="panel-body">
    <%= form_tag save_added_spouse_path do %>
      <%= render partial: "search" %>
      <br>
      <%= render partial: "event_edit", 
	            locals: { eventname: "Marriage", event: union.marriage, autofocus: true } %>					       
	  <br>
	  <%= submit_tag 'add', class: "btn btn-default" %>
      <%= link_to 'cancel', clear_path, remote:true %>	
    <% end %>	
  </div>	
</div>
