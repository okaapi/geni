<h1>Last names...</h1>

<div id="surnames">
  <% @surnames.each_with_index do |surname,index| %>
    <% if surname.length > 0 %> 
      <%= link_to( surname, names_for_surname_path( surname: surname ) ) %>
      <%= '|' if index < @surnames.count-1 %>
    <% end %> 
  <% end %>
</div>


