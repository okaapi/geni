
    <table class="familyview" >	
	  <tr align=right>
	    <td width=50%></td>
	    <td <%= 'class="marriageview"'.html_safe if @individual == individual %>
	                                         style="font-size: <%=font%>px; 
	                                         min-width: <%= font*12%>px;
	                                         max-width: <%= font*12%>px" >		    
		  <%= sex_symbol( individual.sex ) %> 
		  <% if @individual == individual and is_user? %>
            <%= link_to( individual.pretty_name(is_user?), 
		               individual_by_uid_path( individual.uid ) ) if individual %>
		  <% else %>
		    <%= link_to( individual.pretty_name(is_user?), 
		               tree_path( individual.uid ) ) if individual %>	
		  <% end %>	    	  
	      <%= "<br>*".html_safe if individual.birth %>
	           <%= individual.birth.date if individual.birth %><% individual.birth.location if individual.birth %><%= "<br>&#10013;".html_safe if individual.death %>
	           <%= individual.death.date if individual.death %>
	           <% individual.death.location if individual.death %>
	    </td>  
	  </tr>
	  <tr >
	    <td align=right colspan=2>
	
	       
	          <% individual.unions.each do |union| %>
	          <table >
	            <tr>
	              <td></td>
	              <td style="width:<%=font*7%>px">
	              </td>
	            </tr>	          
	            <tr >
	              <td colspan=2 align=right 
	                 style="font-size: <%=font%>px;padding-right:<%=font*2%>px">  
		            <%= marriage_symbol %>   
		            <%= union.marriage.date if union.marriage %>
		            <%= '<br>'.html_safe if union.marriage %> 		               		                       
		            <%= link_to( union.spouse(individual.uid).pretty_name(is_user?), 
		               tree_path( union.spouse(individual.uid).uid ) ) if union.spouse(individual.uid) %>
                 
	              </td>             
	            </tr>
	            <% union.children.each do |child| %>
	              <tr >
	                <td align=right class="childrenview" style="font-size: <%=font%>px;">  
	                  <% if font > @minfont %>
	                    <%= render partial: "individual_and_children", 
	                      locals: { individual: child, font: font - 2 } %>
	                  <% else %>    
	                    <%= sex_symbol( child.sex ) %>  
		                <%= link_to( child.pretty_name(is_user?), 
		                    tree_path( child.uid ) ) %> 
		              <% end %>                        
	                </td>
	              </tr>           
	            <% end %>
	            </table>
	         <% end %>
	       
	  
	    </td> 
	  </tr>
	</table>    