<h1>Listing individuals</h1>

<table class="admin-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Given</th>
      <th>Sex</th>
      <th>Birth</th>
      <th>Death</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @individuals.each do |individual| %>
      <tr>
        <td><%= link_to individual.name, individual %></td>
        <td><%= individual.surname %></td>
        <td><%= individual.given %></td>
        <td><%= individual.sex %></td>
        <td><%= individual.birth.date if individual.birth %></td>
        <td><%= individual.death.date if individual.death %></td>
        <td><%= link_to 'Edit', edit_individual_path(individual) %></td>
        <td><%= link_to 'Destroy', individual, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

